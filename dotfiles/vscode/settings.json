{
    "editor.lineNumbers": "relative",
    "workbench.colorTheme": "One Dark Pro",
    "oneDarkPro.vivid": true,
    "editor.fontSize": 15,
    // "editor.renderLineHighlight": "none"

    // vim search
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,

    "vim.easymotion": true,
    // <leader><leader> w -> jump to specific word forward
    // <leader><leader> b -> jump to specific word backwards

    // <leader><leader> j -> jump to start of line  
    // <leader><leader> k -> jump to start of line backwards

    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.leader": "<space>",
    "vim.inccommand": "replace", // show replace
    "vim.autoindent": true,

    // VIM Keybindings
    "vim.normalModeKeyBindings": [
      // LATEX WORKSHOP:
      // compile pdf 
      {
        "before": ["<leader>", "l","l" ],
        "commands": ["latex-workshop.build"],
        "silent": true
      },
      // Kill compile 
      {
        "before": ["<leader>", "l","k" ],
        "commands": ["latex-workshop.kill"],
        "silent": true
      },
      // view pdf 
      {
        "before": ["<leader>", "l","v"],
        "commands": ["latex-workshop.view"],
        "silent": true
      },
      // Clean aux files 
      {
        "before": ["<leader>", "l","c"],
        "commands": ["latex-workshop.clean"],
        "silent": true
      },
      // Count words 
      {
        "before": ["<leader>", "l","w"],
        "commands": ["latex-workshop.wordcount"],
        "silent": true
      },


      // Hover
      {
        "before": ["<leader>","q"],
        "after": [":","q","cr"]
      },

      // Hover
      {
        "before": ["<s-k>"],
        "commands": ["editor.action.showHover"],
        "when": ["editerTextFocus"]
      },

      // open command palette
      {
        "before": ["<leader>", ":"],
        "commands": ["workbench.action.showCommands"],
        "silent": true
      },

      // rename variable
      {
        "before": ["<leader>", "r", "n"],
        "commands": ["editor.action.rename"],
        "when": [
          "editorHasRenameProvider && editorTextFocus && !editorReadonly"
        ]
      },

      // open terminal
      {
        "before": ["<leader>", "t", "t"],
        "commands": ["workbench.action.togglePanel"]
      },

      // Override H and L defaults
      {
        "before": ["<s-l>"],
        "after": ["$"]
      },
      {
        "before": ["<s-h>"],
        "after": ["^"]
      },

      // disable hlsearch
      {
        "before": ["<leader>", "h"],
        "commands": [":noh"]
      },

      // toggle sidebar visibility
      {
        "before": ["<leader>", "e"],
        "commands": ["workbench.action.toggleSidebarVisibility"]
      },

      // splits
      {
        "before": ["<leader>", "w", "s"],
        "commands": ["workbench.action.splitEditor"]
      },

      // using to tabs to navigate through windows
      {
        "before": ["<tab>"],
        "commands": ["workbench.action.nextEditor"]
      },
      {
        "before": ["<S-tab>"],
        "commands": ["workbench.action.previousEditor"]
      },

      // zenmode
      {
        "before": ["<leader>", "z"],
        "commands": ["workbench.action.toggleZenMode"]
      }
    ],

    // Insertmode bindings
    "vim.insertModeKeyBindings": [
        {
            "before": ["<C-i>"],
            "commands":  ["editor.action.indentLines"]
        },
        {
            "before": ["j", "k"],
            "after":  ["<Esc>"]
        },
        
        // move to the end of the line in insert Mode
        {
            "before": ["<C-l>"],
            "after":  ["<Esc>","A"]
        },
    ],

    // lets you stay in visual mode when indenting
    "vim.visualModeKeyBindings": [
        {
            "before": [">"],
            "after": [">", "g", "v"]
        },
        {
        "before": ["<"],
        "after": ["<", "g", "v"]
        },
    ],
    
    "vim.visualModeKeyBindingsNonRecursive": [

            // paste without overriding clipboard
            {
                "before": [
                    "p",
                ],
                "after": [
                    "p",
                    "g",
                    "v",
                    "y"
                ]
            },
        ],

        //
        "vim.operatorPendingModeKeyBindings": [
            {
                "before": [
                    "L"
                ],
                "after": [
                    "$"
                ]
            },
            {
                "before": [
                    "H"
                ],
                "after": [
                    "^"
                ]
            }
        ],
        "[jsonc]": {
            "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
    }
